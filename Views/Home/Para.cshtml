<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0, viewport-fit=cover" />
<title>Message</title>

<style>
*{
  margin:0;
  padding:0;
  box-sizing:border-box;
}

body{
  background: linear-gradient(-45deg,#ee7752,#e73c7e,#23a6d5,#23d5ab);
  background-size:400% 400%;
  animation: gradientMove 12s ease infinite;
  min-height:100vh;
  font-family:'Segoe UI',Tahoma,Geneva,Verdana,sans-serif;
  padding:20px;
  overflow-x:hidden;
  overflow-y:auto;
  position:relative;
}

@@ gradientMove{
  0%{background-position:0% 50%;}
  50%{background-position:100% 50%;}
  100%{background-position:0% 50%;}
}

body::before{
  content:'';
  position:fixed;
  inset:0;
  background:
  radial-gradient(circle at 20% 50%,rgba(255,255,255,0.1) 0%,transparent 50%),
  radial-gradient(circle at 80% 80%,rgba(255,255,255,0.1) 0%,transparent 50%);
  pointer-events:none;
  z-index:0;
}

.container{
  background:rgba(255,255,255,0.97);
  border-radius:25px;
  padding:30px 25px;
  box-shadow:0 20px 60px rgba(0,0,0,0.25);
  max-width:650px;
  margin:40px auto;
  text-align:center;
  position:relative;
  z-index:1;
  border:2px solid rgba(255,20,147,0.2);
}

h1{
  font-size:2.2em;
  background:linear-gradient(135deg,#ff1493 0%,#ff69b4 50%,#ff1493 100%);
  -webkit-background-clip:text;
  -webkit-text-fill-color:transparent;
  margin-bottom:20px;
  font-weight:800;
}

.paragraph-content{
  text-align:justify;
  line-height:1.7;
  font-size:1.05em;
  color:#333;
  margin:20px 0;
  padding:15px;
  background:rgba(255,105,180,0.05);
  border-radius:15px;
  border-left:4px solid rgba(255,20,147,0.3);
  min-height:80px;
}

.celebration{
  font-size:2.2em;
  margin-top:20px;
}

.hearts{
  display:flex;
  justify-content:center;
  gap:15px;
  margin-top:15px;
  font-size:1.8em;
  flex-wrap:wrap;
}

.heart{
  animation: floatHeart 3s ease-in-out infinite;
}

.heart:nth-child(2){animation-delay:.5s;}
.heart:nth-child(3){animation-delay:1s;}

@@keyframes floatHeart{
  0%,100%{transform:translateY(0);}
  50%{transform:translateY(-10px);}
}

/* Floating Background Hearts */
.floating-heart{
  position:fixed;
  font-size:20px;
  animation: rise 6s linear infinite;
  opacity:0.6;
  pointer-events:none;
  z-index:0;
}

@@keyframes rise{
  0%{transform:translateY(0) scale(1);opacity:0.6;}
  100%{transform:translateY(-100vh) scale(1.5);opacity:0;}
}

/* Responsive */
@@media(max-width:768px){
  .container{
    padding:25px 20px;
    margin:20px auto;
  }
  h1{font-size:1.8em;}
  .paragraph-content{font-size:1em;}
}

@@edia(max-width:480px){
  h1{font-size:1.6em;}
  .paragraph-content{font-size:0.95em;}
}
</style>
</head>

<body>

<div class="container">
  <h1>A Special Message üíå</h1>

  <div class="paragraph-content" id="typeText"></div>

  <div class="celebration">üéâ</div>

  <div class="hearts">
    <span class="heart">üíï</span>
    <span class="heart">üíñ</span>
    <span class="heart">üíó</span>
  </div>
</div>

<script>
/* Typewriter Effect */
const text = "Hey Baby, I just wanted to say that I love you so much and I'm really happy that we are together. You are the best thing that has ever happened to me and hopefully we keep loving and keep growing. Thank you for being there for me and for loving me unconditionally. I promise to always be there for you and to love you with all my heart ‚ù§Ô∏è . Bakki vo dajeh walli baat ko tum serious hi lena....";
let index = 0;
const speed = 25;
const typeTarget = document.getElementById("typeText");

function typeWriter(){
  if(index < text.length){
    typeTarget.innerHTML += text.charAt(index);
    index++;
    setTimeout(typeWriter, speed);
  }
}
typeWriter();

/* Optimized Confetti */
function createConfetti(){
  for(let i=0;i<25;i++){
    const confetti=document.createElement('div');
    confetti.style.position='fixed';
    confetti.style.left=Math.random()*window.innerWidth+'px';
    confetti.style.top='-10px';
    confetti.style.width=Math.random()*10+5+'px';
    confetti.style.height=confetti.style.width;
    confetti.style.background=['#ff1493','#ff69b4','#ffc0cb','#ff20b2'][Math.floor(Math.random()*4)];
    confetti.style.borderRadius='50%';
    confetti.style.pointerEvents='none';
    confetti.style.zIndex=999;
    document.body.appendChild(confetti);

    let fall=setInterval(()=>{
      confetti.style.top=parseInt(confetti.style.top)+5+'px';
      if(parseInt(confetti.style.top)>window.innerHeight){
        clearInterval(fall);
        confetti.remove();
      }
    },30);
  }
}
createConfetti();
setInterval(createConfetti,5000);

/* Floating Background Hearts */
setInterval(()=>{
  const heart=document.createElement('div');
  heart.className='floating-heart';
  heart.innerHTML='üíñ';
  heart.style.left=Math.random()*window.innerWidth+'px';
  heart.style.bottom='-30px';
  document.body.appendChild(heart);
  setTimeout(()=>heart.remove(),6000);
},1500);

</script>

</body>
</html>
